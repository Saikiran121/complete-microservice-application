pipeline {
    agent {
        docker {
            image 'node:12-bullseye'
            args '-u root:root'
        }
    }

    options {
        timestamps()
    }

    stages {
        stage('Install') {
            steps {
                dir('microservice-ui') {
                    sh 'npm ci'
                }
            }
        }

        stage('Build Prod') {
            steps {
                dir('microservice-ui') {
                    sh 'npx ng --configuration=production --aot --build-optimizer'
                    sh 'echo "--- dist contents ---" && ls -la dist || true'
                }
            }
        }
    }
}
