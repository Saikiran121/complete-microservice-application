pipeline {
    agent {
        docker {
            image 'node:12-bullseye'
            args '-u root:root'
        }
    }

    options {
        timestamps()
    }

    stages {
        stage('Install') {
            steps {
                dir('microservice-ui') {
                    sh 'npm ci'
                }
            }
        }

        stage('Build Prod') {
            steps {
                dir('microservice-ui') {
                    sh '''
                        npx ng build microservice-ui --prod --aot --build-optimizer
                        echo "--- dist tree ---"
                        ls -la dist || true
                        find dist -maxdepth 2 -name index.html -print || true
                    '''
                }
            }
        }

        stage('Debug Angular Env') {
            steps {
                dir('microservice-ui') {
                    sh '''
                        npx ng version || true
                        echo "--- projects in angular.json ---"
                        cat angular.json | sed -n '1,120p' | sed -n '/"projects"/,/"cli"/p' || true
                    '''
                }
            }
        }
    }
}
