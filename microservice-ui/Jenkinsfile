pipeline {
    agent {
        docker {
            image 'node:12-bullseye'
            args '-u root:root'
        }
    }

    options {
        timestamps()
    }

    stages {
        stage('Install') {
            steps {
                dir('microservice-ui') {
                    sh 'npm ci'
                }
            }
        }

        stage('Build Prod') {
            steps {
                dir('microservice-ui') {
                    sh '''
                        npx ng build microservice-ui --prod --aot --build-optimizer
                        echo "--- dist tree ---"
                        ls -la dist || true
                        find dist -maxdepth 2 -name index.html -print || true
                    '''
                }
            }
        }

        stage('Debug Angular Env') {
            steps {
                dir('microservice-ui') {
                    sh '''
                        npx ng version || true
                        echo "--- projects in angular.json ---"
                        cat angular.json | sed -n '1,120p' | sed -n '/"projects"/,/"cli"/p' || true
                    '''
                }
            }
        }

        stage('Archive Build') {
            steps {
                dir('microservice-ui') {
                    archiveArtifacts artifacts: 'dist/**', fingerprint: true
                }
            }
        }

        stage('Fix workspace perms') {
            agent any 
            steps {
                sh 'docker run --rm -v "$WORKSPACE":/w alpine sh -c "chown -R 111:113 /w"'
            }
        }

        stage('Docker build') {
            agent any 
            steps {
                dir('microservice-ui') {
                    sh '''
                        docker version
                        docker build -t saikiran8050/microservice-ui:0.10.31 .
                    '''
                }
            }
        }
    }
}
